<form>
    <% if (concepts.size > 1) { %>
    <fieldset>
        <legend>Concepts:</legend>

        <div>
            <input
                type="radio"
                name="concept"
                id="concept-all"
                value="all"
                checked
            />
            <label for="concept-all">All</label>
        </div>

        <% concepts.forEach((concept, i) => { %>
        <div>
            <input type="radio" name="concept" id="concept-<%= `${i + 1}` %>" />
            <label for="concept-<%= `${i + 1}` %>"><%= concept %></label>
        </div>
        <% }); %>
    </fieldset>
    <% } %>
</form>
